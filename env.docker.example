# Tham số Docker Compose (copy sang .env để sử dụng)

# Server
NODE_ENV=development
PORT=8000
HOST=0.0.0.0

# Database (trùng với docker-compose.yml)
DB_HOST=mysql
DB_PORT=3306
DB_NAME=nova_sites_db
DB_USER=nova_admin
DB_PASSWORD=secret123
DB_ROOT_PASSWORD=secret123

# JWT
JWT_ACCESS_SECRET=sample-access-secret
JWT_REFRESH_SECRET=sample-refresh-secret
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API
API_PREFIX=/api
API_VERSION=/v1
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=123456789
CLOUDINARY_API_SECRET=your_secret

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=example@gmail.com
EMAIL_PASS=app-password

# Tùy chọn khác
IMAGE_OPTIMIZE_ENABLED=true
IMAGE_OPTIMIZE_DEFAULT_W=800
IMAGE_OPTIMIZE_DEFAULT_H=0
IMAGE_OPTIMIZE_MAX_W=1600
IMAGE_OPTIMIZE_MAX_H=1200

