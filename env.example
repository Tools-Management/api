# Server Configuration
NODE_ENV=development
PORT=8000
HOST=localhost

# Database Configuration
DATABASE_URL=
DB_HOST=localhost
DB_PORT=3306
DB_NAME=nova_sites_db
DB_USER=root
DB_PASSWORD=
DB_LOGGING=true

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3001

# API Configuration
API_VERSION=/v1
API_PREFIX=/api

# FE URL
FRONTEND_URL=http://localhost:3000

# URL API KEYS
EXTERNAL_API_URL=http://API_KEYS.COM

# ACCOUNT API KEYS
EMAIL_KEY=example@gmail.com
PASSWORD_KEY=example

# Image Optimization (Cloudinary URL transform)
# Bật/tắt tối ưu ảnh ở tầng middleware (true/false). Mặc định bật nếu không đặt false
IMAGE_OPTIMIZE_ENABLED=true
# Chiều rộng mặc định nếu không có Client Hints/qs (ví dụ desktop)
IMAGE_OPTIMIZE_DEFAULT_W=800
# Chiều cao mặc định (tùy chọn). Để trống hoặc 0 để bỏ qua
IMAGE_OPTIMIZE_DEFAULT_H=0
# Giới hạn tối đa chiều rộng/chiều cao khi đọc từ header/query client
IMAGE_OPTIMIZE_MAX_W=1600
IMAGE_OPTIMIZE_MAX_H=1200

# VNPay Payment Gateway Configuration
# Get your credentials from VNPay merchant portal
# Sandbox: https://sandbox.vnpayment.vn/merchantv2/
# Production: https://vnpay.vn
VNPAY_TMN_CODE=YOUR_MERCHANT_CODE
VNPAY_HASH_SECRET=YOUR_HASH_SECRET_KEY
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_API_URL=https://sandbox.vnpayment.vn/merchant_webapi/api/transaction
VNPAY_RETURN_URL=http://localhost:8000/api/v1/wallet/vnpay/return
VNPAY_IPN_URL=http://localhost:8000/api/v1/wallet/vnpay/ipn

# Super Admin for first time setup
USERNAME=SUPPER_ADMIN
EMAIL_ADMIN=example@gmail.com
PASSWORD_ADMIN=example
