{
  "name": "nova-sites-api",
  "version": "1.0.0",
  "description": "Backend API for Nova Sites - Website selling platform",
  "main": "dist/src/server.js",
  "scripts": {
    "start": "node dist/src/server.js",
    "dev": "nodemon --host 0.0.0.0",
    "build": "tsc && tsc-alias",
    "watch": "tsc --watch",
    "db:migrate": "sequelize-cli db:migrate --config src/config/sequelize.config.js",
    "db:migrate:undo": "sequelize-cli db:migrate:undo --config src/config/sequelize.config.js",
    "db:migrate:status": "sequelize-cli db:migrate:status --config src/config/sequelize.config.js",
    "db:seed:all": "sequelize-cli db:seed:all --config src/config/sequelize.config.js",
    "db:create:migration": "sequelize-cli migration:generate --name",
    "db:create:seeder": "sequelize-cli seed:generate --name",
    "create:superadmin": "ts-node scripts/create-superadmin.ts",
    "create:superadmin:prod": "ts-node scripts/create-superadmin.prod.ts",
    "create:admin": "ts-node scripts/create-admin.ts",
    "create:user": "ts-node scripts/create-user.ts",
    "test:login": "ts-node scripts/test-login.ts",
    "test:cookies": "ts-node scripts/test-cookies.ts",
    "test:upload": "ts-node scripts/test-upload.ts",
    "test:upload-integration": "ts-node scripts/test-upload-integration.ts",
    "test:cloudinary-config": "ts-node scripts/test-cloudinary-config.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "sequelize",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "cloudinary": "^1.41.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "mysql2": "^3.6.5",
    "nodemailer": "^6.9.7",
    "sequelize": "^6.35.2",
    "slugify": "^1.6.6",
    "socket.io": "^4.7.4",
    "streamifier": "^0.1.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.9",
    "@types/nodemailer": "^6.4.14",
    "@types/streamifier": "^0.1.2",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
